
<div class ="row">
    <!--Here is what the user will see on the left side of the screen-->
    <!--Burgers that are ready to eat-->
    <div class="col-md-6">
        <h4 class="blue-font">Delicious Burgers To Eat</h4>
        <div id="ready_to_eat">

    <!--Insert for the Burgers-->
    {{#each burgers}}
        {{unless devoured}}
            <form action="burger/eat/{{id}}" method="POST">
             <div class="input-bgr-types">
             <li class="form-control">{{id}}.{{burger_name}}</li>
               <span class="input-bgr-types-btn">
                 <button class="btn btn-success devour-button" type="submit">Devour The Burger!</button>
                 </span>
             </div>
           </form>
      {{/unless}}
   {{/each}}
  </div>
</div>

<!--Right side where the eaten burger will go-->
<div class="col-md-6">
    <h4> class="blue_font">Burgers Already Eaten!</h4>
    <div id="already_eaten">

        <!--The Burgers That Were Eaten -->
  {{#each burgers}}
      {{if this.devoured}}
          <div class="input-bgr-types">
                <li class="form-control">{{this.id}}.{{this.burger_name}}</li>
                <span class="input-bgr-types-btn">
                <button class="btn btn-primary eaten-button" type="button">Eaten!</button>
                </span>
            </div>
        {{/if}}
    {{/each}}

         </div>
    </div>
</div>

